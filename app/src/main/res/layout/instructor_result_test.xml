<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".instructor.Instructor_Result_Test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:src="@drawable/white_logo" />

        <androidx.cardview.widget.CardView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/accent2"
            app:cardBackgroundColor="@color/dark"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="CancelResult">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dashboard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DASHBOARD"
                    android:textColor="@color/light"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practical Test Result"
            android:textAllCaps="true"
            android:textColor="@color/dark"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date:  "
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23/04/2023"
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:id="@+id/resDate"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time:  "
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:id="@+id/resTime"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Applicant:  "
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DANICA MONTANO"
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:id="@+id/resApplicant"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Licence:  "
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AB123456"
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:id="@+id/resDl"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result: "
                android:textAllCaps="true"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:layout_marginRight="50dp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/radioResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioPass"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/result_radio_pass"
                    android:text="passed"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"
                    android:layout_marginRight="20dp"/>

                <RadioButton
                    android:id="@+id/radioFail"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/result_radio_fail"
                    android:text="failed"
                    android:textSize="18sp"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:button="@android:color/transparent"/>

            </RadioGroup>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment: "
            android:textAllCaps="true"
            android:textColor="@color/dark"
            android:textSize="18sp"
            android:layout_marginRight="50dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:hint="Enter comment here..."
            android:lines="4"
            android:maxLines="10"
            android:minLines="4"
            android:scrollbars="vertical"
            android:id="@+id/resComment"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/plain_border"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:id="@+id/cancelRes"
                android:onClick="CancelResult"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:onClick="saveResults"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/filled_green"
                android:layout_margin="10dp"
                android:id="@+id/saveRes"/>



        </LinearLayout>





    </LinearLayout>

</LinearLayout>